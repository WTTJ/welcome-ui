  "source": ["src/theme/tokens.json", "src/components/**/tokens.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "src/theme/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "selector": "@theme"
          }
        }
      ]
    }
  }
}
