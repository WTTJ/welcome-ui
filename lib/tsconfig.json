{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx", // or "react-jsxdev" for development
    "jsxImportSource": "react",
    "sourceMap": true,
    "declaration": true,
    "target": "ES6",
    "paths": {
      "@/utils": ["./src/utils"],
      "@/theme": ["./src/theme"],
      "@/fonts/*": ["./src/components/IconsFont/fonts/*"],
      "@/*": ["./src/components/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "exclude": ["**/*.json"]
}
