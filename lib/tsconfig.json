{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "target": "ES6",
    "paths": {
      "@/utils": ["./src/utils"],
      "@/theme": ["./src/theme"],
      "@/fonts/*": ["./src/components/IconsFont/fonts/*"],
      "@/*": ["./src/components/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "exclude": ["**/*.json"]
}
