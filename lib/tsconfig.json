{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "target": "ES6",
    "paths": {
      "@old/utils": ["./src/old/utils"],
      "@old/theme": ["./src/old/theme"],
      "@old/*": ["./src/old/components/*"],
      "@/*": ["./src/*"],
      "@tests": ["./tests"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "exclude": ["**/*.json"]
}
