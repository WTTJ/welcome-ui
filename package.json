{
  "name": "welcome-ui",
  "version": "0.0.1",
  "description": "A delightful UI system from Welcome to the Jungle",
  "main": "dist/umd/welcome-ui.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "icons:optimize": "svgo --folder=src/atoms/Icon/assets --pretty --indent=2 --multipass --quiet",
    "icons:collect": "node helpers/icons.js && eslint src/atoms/Icon/icons.js --fix",
    "build": "rm -rf dist && rollup --config",
    "preversion": "yarn test && yarn build",
    "postversion": "git push && git push --tags",
    "lint": "eslint src --max-warnings 0",
    "test": "jest src",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "files": [
    "esm/*",
    "umd/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WTTJ/welcome-ui.git"
  },
  "keywords": [
    "ui",
    "welcome",
    "welcome to the jungle",
    "WTTJ",
    "react",
    "styled-components"
  ],
  "author": "WTTJ <tech@wttj.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WTTJ/welcome-ui/issues"
  },
  "homepage": "https://github.com/WTTJ/welcome-ui#readme",
  "devDependencies": {
    "@babel/cli": "=7.4.3",
    "@babel/core": "=7.4.3",
    "@babel/plugin-proposal-class-properties": "=7.4.0",
    "@babel/plugin-transform-modules-commonjs": "=7.4.0",
    "@babel/preset-env": "=7.4.3",
    "@babel/preset-react": "=7.0.0",
    "@emotion/core": "^10.0.9",
    "babel-eslint": "=10.0.1",
    "babel-jest": "=24.7.1",
    "docz": "=0.13.7",
    "docz-theme-default": "^0.13.7",
    "eslint": "=5.16.0",
    "eslint-config-prettier": "=4.1.0",
    "eslint-config-react-app": "=3.0.8",
    "eslint-plugin-flowtype": "=3.6.0",
    "eslint-plugin-import": "=2.16.0",
    "eslint-plugin-jsx-a11y": "=6.2.1",
    "eslint-plugin-prettier": "=3.0.1",
    "eslint-plugin-react": "=7.12.4",
    "husky": "=1.3.1",
    "jest": "=24.7.1",
    "jest-styled-components": "=6.3.1",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-router-dom": "4.2.2",
    "react-test-renderer": "=16.8.6",
    "rollup": "=1.10.0",
    "rollup-plugin-babel": "=4.3.2",
    "rollup-plugin-commonjs": "=9.3.4",
    "rollup-plugin-node-resolve": "=4.2.3",
    "rollup-plugin-terser": "=4.0.4",
    "svgo": "=1.2.2"
  },
  "dependencies": {
    "lodash.concat": "=4.5.0",
    "lodash.get": "=4.4.2",
    "lodash.includes": "^4.3.0",
    "lodash.merge": "^4.6.1",
    "prop-types": "=15.7.2",
    "styled-components": "=4.1.3"
  },
  "peerDependencies": {
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-router-dom": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn icons:optimize && yarn icons:collect && yarn test"
    }
  }
}
