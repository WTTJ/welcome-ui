{
  "name": "@welcome-ui/repo",
  "version": "1.1.1",
  "main": "dist/welcome-ui.cjs.js",
  "module": "dist/welcome-ui.es.js",
  "description": "Customizable design system with react • styled-components • styled-system and reakit.",
  "scripts": {
    "first:install": "yarn && yarn build && yarn icons:build",
    "start": "yarn docs:dev",
    "docs:dev": "yarn next docs -p 3020",
    "docs:build": "yarn next build docs && yarn next export docs",
    "docs:deploy": "yarn && yarn icons:build && yarn webfont:build && yarn build && yarn docs:build",
    "homerun": "yarn clean --yes && rm -rf node_modules/ docs/.next/ && yarn cache clean && yarn && yarn build --all && yarn start",
    "icons": "yarn icons:optimize && yarn icons:collect && yarn icons:build && yarn webfont:build && yarn build && yarn",
    "icons:optimize": "node -r esm scripts/icons-optimize.js",
    "icons:collect": "node -r esm scripts/icons-collect.js",
    "icons:build": "node -r esm ./scripts/icons-build.js",
    "webfont": "yarn webfont:build && yarn webfont:deploy",
    "webfont:build": "node -r esm scripts/webfont-build.js --force && yarn build:packages --scope @welcome-ui/icons.font",
    "webfont:deploy": "./scripts/webfont-deploy.sh",
    "pre-build": "yarn icons:collect",
    "build": "yarn build:core && yarn build:packages",
    "build:packages": "lerna run build --ignore docs --ignore @welcome-ui/core",
    "build:core": "./scripts/core.sh",
    "watch": "onchange 'packages/**/*.js' -e '**/dist/**' -- node -r esm scripts/watch.js {{changed}}",
    "release:publish": "yarn lerna publish --conventional-commits --no-private",
    "release:prerelease": "yarn -s check:ssh && yarn build && yarn lerna publish --conventional-prerelease --no-private --pre-dist-tag next --yes || yarn -s check:ssh-error",
    "release": "yarn -s check:ssh && yarn build && yarn release:publish || yarn -s check:ssh-error",
    "lint": "yarn lint:mdx & yarn lint:js && yarn lint:css",
    "lint:js": "eslint packages scripts --max-warnings 0 --fix",
    "lint:css": "stylelint 'packages/**/styles.js'",
    "lint:mdx": "prettier --parser mdx --write 'docs/**/*.mdx'",
    "test": "node --expose-gc ./node_modules/.bin/jest ./packages --logHeapUsage",
    "check:ssh": "ssh-add -L >> /dev/null",
    "check:ssh-error": "tput setaf 1; echo 'Warning ! Your ssh key is not correctly set ( or forwarded if you work on a remote machine )'; tput sgr0",
    "clean": "lerna clean"
  },
  "private": true,
  "workspaces": [
    "packages/**/*",
    "../packages/**/*",
    "icons",
    "icons/**/*",
    "../icons/**/*",
    "docs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WTTJ/welcome-ui.git"
  },
  "keywords": [
    "design-system",
    "react",
    "reakit",
    "styled-components",
    "styled-system",
    "ui-library",
    "ui",
    "ux",
    "jungle",
    "welcome",
    "WTTJ"
  ],
  "author": "WTTJ <tech@wttj.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WTTJ/welcome-ui/issues"
  },
  "devDependencies": {
    "@babel/cli": "=7.4.3",
    "@babel/core": "=7.4.3",
    "@babel/plugin-proposal-class-properties": "=7.4.0",
    "@babel/plugin-proposal-optional-chaining": "=7.9.0",
    "@babel/plugin-transform-modules-commonjs": "=7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "=7.4.3",
    "@babel/preset-react": "=7.0.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@emotion/core": "^10.0.9",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/dom": "7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "12.6.0",
    "@xstyled/styled-components": "^2.2.3",
    "@xstyled/system": "^2.2.3",
    "aws-sdk": "^2.827.0",
    "babel-eslint": "=10.0.3",
    "babel-jest": "=24.7.1",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-styled-components": "=1.10.6",
    "babel-plugin-transform-react-remove-prop-types": "=0.4.24",
    "colors": "^1.4.0",
    "conventional-github-releaser": "^3.1.3",
    "date-fns": "^2.19.0",
    "depcheck": "=0.9.1",
    "eslint": "=6.5.1",
    "eslint-config-prettier": "=6.4.0",
    "eslint-config-react-app": "=5.0.2",
    "eslint-plugin-flowtype": "=4.3.0",
    "eslint-plugin-import": "=2.18.2",
    "eslint-plugin-jsx-a11y": "=6.2.3",
    "eslint-plugin-prettier": "=3.1.1",
    "eslint-plugin-react": "=7.16.0",
    "eslint-plugin-react-hooks": "=2.1.2",
    "eslint-plugin-sort-destructure-keys": "1.3.5",
    "esm": "^3.2.25",
    "final-form": "^4.20.2",
    "husky": "=3.1.0",
    "jest": "26.6.3",
    "jest-styled-components": "7.0.3",
    "lerna": "^3.22.1",
    "lerna-update-wizard": "^0.17.7",
    "lodash.capitalize": "=4.2.1",
    "lodash.difference": "^4.5.0",
    "minimist": "1.2.5",
    "netlify-cli": "^2.59.1",
    "onchange": "^7.0.2",
    "prettier": "=1.18.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-final-form": "^6.5.2",
    "react-helmet": "^5.2.1",
    "react-live": "^2.2.1",
    "react-router-dom": "=5.1.2",
    "rollup": "=1.12.4",
    "rollup-plugin-babel": "=4.3.2",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-postcss": "=2.0.3",
    "standard-version": "^6.0.1",
    "style-loader": "=0.23.1",
    "styled-components": "^5.2.1",
    "stylelint": "=12.0.0",
    "stylelint-config-recommended": "=3.0.0",
    "stylelint-config-styled-components": "=0.1.1",
    "stylelint-processor-styled-components": "=1.9.0",
    "surge": "=0.21.3",
    "svgo": "^2.2.0",
    "webfonts-generator": "^0.4.0",
    "wttj-config-front": "1.0.1",
    "yargs": "^15.3.1"
  },
  "dependencies": {},
  "resolutions": {
    "styled-components": "5.1.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn icons:collect && yarn lint && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "homepage": "https://welcome-ui.com"
}
