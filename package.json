{
  "name": "welcome-ui",
  "version": "0.5.2",
  "description": "A delightful UI system from Welcome to the Jungle",
  "main": "dist/cjs/welcome-ui.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "start": "yarn docz:dev",
    "icons": "yarn icons:optimize && yarn icons:collect",
    "icons:optimize": "svgo --folder=src/components/Icon/assets --pretty --indent=2 --multipass --quiet",
    "icons:collect": "node helpers/icons.js && eslint src/components/Icon/icons.js --fix",
    "build": "rm -rf dist && rollup --config",
    "preversion": "yarn test",
    "version": "yarn build && git add .",
    "postversion": "git push && git push --tags",
    "lint": "eslint src --max-warnings 0",
    "test": "jest src",
    "test:watch": "jest --watch",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:clean": "rm -rf .docz && rm -rf dist",
    "clean": "yarn docz:clean && yarn start",
    "now-build": "yarn docz:build",
    "phoenix": "rm -rf node_modules && yarn cache clean && yarn"
  },
  "files": [
    "dist/esm/*",
    "dist/cjs/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WTTJ/welcome-ui.git"
  },
  "keywords": [
    "ui",
    "welcome",
    "welcome to the jungle",
    "WTTJ",
    "react",
    "styled-components"
  ],
  "author": "WTTJ <tech@wttj.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WTTJ/welcome-ui/issues"
  },
  "homepage": "https://github.com/WTTJ/welcome-ui#readme",
  "devDependencies": {
    "@babel/cli": "=7.4.3",
    "@babel/core": "=7.4.3",
    "@babel/plugin-proposal-class-properties": "=7.4.0",
    "@babel/plugin-transform-modules-commonjs": "=7.4.0",
    "@babel/preset-env": "=7.4.3",
    "@babel/preset-react": "=7.0.0",
    "@emotion/core": "^10.0.9",
    "@testing-library/react": "^8.0.1",
    "babel-eslint": "=10.0.1",
    "babel-jest": "=24.7.1",
    "babel-plugin-transform-react-remove-prop-types": "=0.4.24",
    "css-loader": "=2.1.1",
    "docz": "1.2.0",
    "docz-theme-default": "1.2.0",
    "eslint": "=5.16.0",
    "eslint-config-prettier": "=4.1.0",
    "eslint-config-react-app": "=3.0.8",
    "eslint-plugin-flowtype": "=3.6.0",
    "eslint-plugin-import": "=2.17.2",
    "eslint-plugin-jsx-a11y": "=6.2.1",
    "eslint-plugin-prettier": "=3.0.1",
    "eslint-plugin-react": "=7.12.4",
    "eslint-plugin-react-hooks": "=1.6.0",
    "final-form": "=4.13.1",
    "husky": "=1.3.1",
    "jest": "=24.7.1",
    "jest-dom": "^3.5.0",
    "jest-styled-components": "=6.3.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-final-form": "=6.0.1",
    "react-router-dom": "4.2.2",
    "rollup": "=1.12.4",
    "rollup-plugin-babel": "=4.3.2",
    "rollup-plugin-commonjs": "=10.0.0",
    "rollup-plugin-node-resolve": "=4.2.3",
    "rollup-plugin-postcss": "=2.0.3",
    "rollup-plugin-terser": "=4.0.4",
    "style-loader": "=0.23.1",
    "svgo": "=1.2.2"
  },
  "dependencies": {
    "@xstyled/system": "^1.2.0",
    "lodash.concat": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.1",
    "prop-types": "^15.7.2",
    "react-datepicker": "^2.6.0",
    "react-dropzone": "^10.1.5",
    "react-select": "=3.0.4",
    "styled-components": "^4.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router-dom": "^4.2.0"
  },
  "resolutions": {
    "docz/**/webpack": "4.31.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn icons:optimize && yarn icons:collect && yarn test"
    }
  }
}
