{
  "name": "@welcome-ui/repo",
  "version": "1.1.1",
  "main": "dist/welcome-ui.cjs.js",
  "module": "dist/welcome-ui.es.js",
  "description": "Customizable design system with react • styled-components • styled-system and reakit.",
  "scripts": {
    "first:install": "yarn && yarn build && yarn icons:build",
    "start": "yarn docs:dev",
    "docs:dev": "cd docs && yarn next -p 3020",
    "docs:build": "cd docs && yarn next build && yarn next export",
    "docs:deploy": "yarn && yarn icons:build && yarn build && yarn docs:build",
    "homerun": "yarn clean --yes && rm -rf node_modules/ docs/.next/ && yarn cache clean && yarn && yarn build && yarn start",
    "icons": "yarn icons:optimize && yarn icons:collect && yarn icons:build && yarn icons:types && yarn webfont && yarn build && yarn",
    "icons:optimize": "node -r esm scripts/icons-optimize.js",
    "icons:collect": "node -r esm scripts/icons-collect.js",
    "icons:build": "lerna run build --scope @welcome-ui/icons",
    "icons:types": "lerna run types --scope @welcome-ui/icons",
    "webfont": "yarn webfont:build && yarn webfont:deploy",
    "webfont:build": "node -r esm scripts/webfont-build.js --force && yarn build:packages --scope @welcome-ui/icons.font",
    "webfont:deploy": "./scripts/webfont-deploy.sh",
    "pre-build": "yarn icons:collect",
    "build": "yarn webfont:build && yarn build:core && yarn build:packages && yarn build:types && yarn build:docs",
    "build:packages": "lerna run build --ignore docs --ignore @welcome-ui/core",
    "build:core": "./scripts/core.sh",
    "build:types": "lerna run types",
    "build:docs": "lerna run doc --concurrency 2",
    "watch": "onchange 'packages/**/*.ts*' -e '**/dist/**' -- node -r esm scripts/watch.js {{changed}}",
    "release": "yarn -s check:ssh && yarn lerna version --conventional-commits --no-private || yarn -s check:ssh-error",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:ts && yarn lint:mdx",
    "lint:js": "eslint packages scripts --max-warnings 0",
    "lint:css": "stylelint 'packages/**/styles.ts' --allow-empty-input",
    "lint:ts": "tsc --noEmit",
    "lint:mdx": "prettier --parser mdx --write 'docs/**/*.mdx'",
    "test": "node --expose-gc ./node_modules/.bin/jest ./packages --logHeapUsage",
    "check:ssh": "ssh-add -L >> /dev/null",
    "check:ssh-error": "tput setaf 1; echo 'Warning ! Your ssh key is not correctly set ( or forwarded if you work on a remote machine )'; tput sgr0",
    "clean": "lerna clean",
    "postinstall": "husky install",
    "migrate": "node ./scripts/upgrade-v5.js"
  },
  "private": true,
  "workspaces": [
    "packages/**/*",
    "../packages/**/*",
    "icons",
    "icons/**/*",
    "../icons/**/*",
    "docs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WTTJ/welcome-ui.git"
  },
  "keywords": [
    "design-system",
    "react",
    "reakit",
    "styled-components",
    "styled-system",
    "ui-library",
    "ui",
    "ux",
    "jungle",
    "welcome",
    "WTTJ"
  ],
  "author": "WTTJ <tech@wttj.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WTTJ/welcome-ui/issues"
  },
  "devDependencies": {
    "@babel/cli": "7.21.0",
    "@babel/core": "7.21.0",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.21.0",
    "@babel/plugin-transform-modules-commonjs": "7.20.11",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/emoji-mart": "3.0.9",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.escaperegexp": "^4.1.6",
    "@types/lodash.groupby": "^4.6.6",
    "@types/lodash.range": "^3.2.6",
    "@types/ramda": "^0.28.23",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.11",
    "@types/react-window": "^1.8.5",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@xstyled/styled-components": "^3.7.0",
    "aws-sdk": "^2.1282.0",
    "babel-jest": "29.4.3",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-transform-async-to-promises": "^0.8.18",
    "colors": "^1.4.0",
    "conventional-github-releaser": "^3.1.3",
    "date-fns": "^2.28.0",
    "esbuild": "^0.17.9",
    "esbuild-plugin-replace": "^1.3.0",
    "esm": "^3.2.25",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "jest-styled-components": "7.1.1",
    "lerna": "^3.22.1",
    "lerna-update-wizard": "^0.17.8",
    "lodash.difference": "^4.5.0",
    "minimist": "1.2.8",
    "netlify-cli": "^12.14.0",
    "onchange": "^7.0.2",
    "postcss": "^8.4.19",
    "react": "^18.1.0",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.1.0",
    "react-router-dom": "6.8.1",
    "rimraf": "^4.1.1",
    "standard-version": "=7.0.0",
    "styled-components": "^5.3.6",
    "svgo": "^3.0.1",
    "typescript": "^4.9.3",
    "webfonts-generator": "^0.4.0",
    "wttj-config-front": "^2.4.0",
    "yargs": "^17.7.0"
  },
  "resolutions": {
    "styled-components": "5.3.6"
  },
  "homepage": "https://welcome-ui.com"
}
