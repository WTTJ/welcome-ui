{
  "name": "main",
  "description": "Customizable design system with react • styled-components • styled-system and ariakit.",
  "scripts": {
    "build:lib": "cd lib && yarn build",
    "build:website": "cd website && yarn && yarn build",
    "build": "yarn build:lib",
    "build:tokens": "style-dictionary build --config=style-dictionary.json --verbose",
    "check:audit": "/bin/bash -c 'yarn audit --level low; [[ $? -ge 2 ]] && exit 1 || exit 0'",
    "check:audit:fix": "npm_config_yes=true npx yarn-audit-fix",
    "icons": "node -r esm scripts/icons-optimize.js && node -r esm scripts/icons-collect.js && yarn webfont",
    "webfont": "node -r esm scripts/webfont-build.js --force",
    "lint:tailwindcss": "stylelint 'lib/src/Tailwind**/**/*.css'",
    "lint:styled": "stylelint '**/styles.ts'",
    "lint:css": "yarn lint:tailwindcss && yarn lint:styled",
    "lint:js": "eslint scripts lib website --max-warnings 0",
    "lint:mdx": "prettier --parser mdx --write '**/docs/index.mdx'",
    "lint:ts": "cd lib && tsc --noEmit && cd ../website && tsc --noEmit",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:ts && yarn lint:mdx",
    "migrate": "node ./scripts/upgrade-v8.js",
    "postinstall": "husky install",
    "release:dev": "node .dev-releases/version.mjs",
    "release:alpha": "cd lib && yarn release-it --preRelease=alpha",
    "release": "cd lib && yarn release-it",
    "start": "cd website && yarn dev -p 3020",
    "export-properties": "node ./scripts/generate-types-doc.js",
    "test": "cd lib && yarn test",
    "storybook": "yarn tsx --watch ./lib/src/TailwindTheme/generate-theme.ts & storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "private": true,
  "workspaces": [
    "website",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WTTJ/welcome-ui.git"
  },
  "keywords": [
    "design-system",
    "react",
    "ariakit",
    "styled-components",
    "styled-system",
    "ui-library",
    "ui",
    "ux",
    "jungle",
    "welcome",
    "WTTJ"
  ],
  "author": "WTTJ <tech@wttj.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WTTJ/welcome-ui/issues"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@eslint/js": "^9.32.0",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "22.14.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/utils": "^8.38.0",
    "@vitest/browser": "3.1.4",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vusion/webfonts-generator": "^0.8.0",
    "@xstyled/styled-components": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "aws-sdk": "^2.1691.0",
    "colors": "^1.4.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.2",
    "esm": "^3.2.25",
    "generic-names": "^4.0.0",
    "glob": "^11.0.0",
    "globals": "^16.0.0",
    "husky": "8.0.3",
    "lodash.difference": "^4.5.0",
    "minimist": "1.2.8",
    "playwright": "^1.54.2",
    "postcss": "^8.5.3",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "3.5.3",
    "react": "^18.3.1",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.3.1",
    "react-router-dom": "7.5.2",
    "sass-embedded": "^1.90.0",
    "standard-version": "9.5.0",
    "storybook": "^9.1.2",
    "storybook-addon-pseudo-states": "^9.1.2",
    "style-dictionary": "^5.0.4",
    "styled-components": "^6.1.15",
    "stylelint": "^16.18.0",
    "stylelint-config-recommended": "^16.0.0",
    "svgo": "^3.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "typescript-plugin-css-modules": "^5.2.0",
    "vitest": "3.1.4",
    "yargs": "^17.7.2"
  },
  "resolutions": {
    "brace-expansion": "^2.0.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "tailwindcss": "^4.1.11"
  }
}
