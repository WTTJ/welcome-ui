{
  "compilerOptions": {
    "outDir": ".",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [],
    "typeRoots": [],
    "noLib": true
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/**/node_modules",
    "packages/**/dist",
    "**/*.test.tsx",
    "icons/**/*",
    "rollup.config.js"
  ]
}
