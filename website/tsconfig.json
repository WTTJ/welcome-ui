{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/utils": [
        "../lib/src/utils"
      ],
      "@/theme": [
        "../lib/src/theme"
      ],
      "@/fonts/*": [
        "../lib/src/components/IconsFont/fonts/*"
      ],
      "@/*": [
        "../lib/src/components/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
