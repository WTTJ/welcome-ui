{
  "compilerOptions": {
    "outDir": ".",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true
  },
  "include": ["packages/*", "packages/**/*", "icons/*", "icons/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.tsx"]
}
